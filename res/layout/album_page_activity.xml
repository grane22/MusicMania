<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.musicmania.HomeActivity" >

    <TextView
        android:id="@+id/album_page_artist_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/album_page_name_text"
        android:layout_below="@+id/album_page_name_text"
        android:layout_marginTop="14dp"
        android:text="Artist"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/album_page_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/album_page_title_textview"
        android:layout_below="@+id/album_page_title_textview"
        android:layout_marginTop="15dp"
        android:text="name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/album_page_mbid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/album_page_artist_text"
        android:layout_below="@+id/album_page_artist_text"
        android:layout_marginTop="16dp"
        android:text="mbid"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/album_release_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/album_page_mbid_text"
        android:layout_below="@+id/album_page_mbid_text"
        android:layout_marginTop="15dp"
        android:text="ALBUM_RELEASE_DATE"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/album_page_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="16dp"
        android:text="@string/album_page_title_text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/album_page_tags_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/album_release_date_text"
        android:layout_below="@+id/album_release_date_text"
        android:layout_marginTop="14dp"
        android:text="TAGS"
        android:textSize="16sp" />

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/album_page_youtube_demo_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/album_page_tags_text"
        android:layout_margin="12dip"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp" >
    </com.google.android.youtube.player.YouTubePlayerView>

    <Button
        android:id="@+id/add_to_album_recommend_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/album_page_youtube_demo_view"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        android:text="@string/recommend_user_text" />

    <Button
        android:id="@+id/go_to_main_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_to_album_recommend_list_button"
        android:layout_alignBottom="@+id/add_to_album_recommend_list_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="@string/go_to_main_page_text" />

</RelativeLayout>