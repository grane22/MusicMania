            android:name="com.example.musicmania.ShowOtherUserPlaylist"
            android:label="@string/show_playlist"
            android:screenOrientation="portrait"/>
          
          <activity
            android:name="com.example.musicmania.ShowOtherUserPlayListSong"
            android:label="@string/song_playlist_text"
            android:screenOrientation="portrait"/>
       	
