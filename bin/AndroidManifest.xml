            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.musicmania.YouTubeDemo"
            android:label="@string/youtube_api_demo_text"
            android:screenOrientation="portrait"/>
        
        <activity
            android:name="com.example.musicmania.LastFmApiSearch"
            android:label="@string/last_fm_api_demo_text"
            android:screenOrientation="portrait"/>
        
